
<%= form_tag items_path, method: :get, class: 'form-inline', remote: true do %>
  <div class="input-append">
    <%= text_field_tag :query, "", placeholder: "...", class: "span3", id: "search_field", size: "30", type: "text" %>
    <%= submit_tag "Buscar".html_safe, class: "btn btn-success" %>
  </div>
  <%= link_to "Refresh items", refresh_admin_items_path, class: "btn btn-primary", 
    method: :post %>
  <%= link_to "Refresh users", refresh_admin_items_path, class: "btn btn-danger", 
    method: :post %>
<% end %>

<div id="others">
  <%= render :partial => "items", :object => @items %>
</div>


<%#= render :partial => "items", :object => @yours %>

<div class="btn-group pull-right">
  <button class="btn btn-primary ">Refrescar</button>
  <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <%= link_to "Refrescar", refresh_items_path,  class: "btn btn-primary" %>
    <%= link_to "Resetear", reset_items_path, class: "btn btn-danger", method: :delete %>
  </ul>
</div>

<%= form_tag items_path, method: :get, class: 'form-inline', remote: true do %>
  <div class="input-append">
    <%= text_field_tag :query, "", placeholder: "...", class: "span3", id: "appendedInputButtons", size: "30", type: "text" %>
    <%= submit_tag "Buscar", class: "btn btn-success" %>
  </div>
<% end %>

<div id="others">
  <%= render :partial => "items", :object => @others %>
</div>

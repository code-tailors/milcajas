<%#= render :partial => "items", :object => @yours %>

<div class="btn-group pull-right">
  <%= link_to "Refrescar", "#", class: "btn btn-primary" %>
  <%= link_to "#", class: "btn dropdown-toggle btn-primary", data: {toggle: "dropdown"} do %>
    <span class="caret"></span>
  <% end %>
  <ul class="dropdown-menu">
    <li><%= link_to "Resetear", reset_items_path, method: :delete %></li>
  </ul>
</div>

<%= form_tag items_path, method: :get, class: 'form-inline', remote: true do %>
  <div class="input-append">
    <%= text_field_tag :query, "", placeholder: "...", class: "span3", id: "search_field", size: "30", type: "text" %>
    <%= submit_tag "Buscar".html_safe, class: "btn btn-success" %>

  </div>
<% end %>

<div id="others">
  <%= render :partial => "items", :object => @others %>
</div>


<div class="row-fluid phrase-banner ">
  <div class="span2 offset1">
    <%= image_tag "muchas_cajas.jpg" %>
  </div>
  <div class="span6 welcome-banner">
    <h3><%= t("views.welcome.index.banner") %></h3>
  </div>
</div>

<div class="row-fluid ">
  <div class="span12">
    <ul class="thumbnails">
      <li  class="span4 steps">
        <div class="thumbnail">
          <h4 >1</h4>
          <p><%= t("views.welcome.index.step1") %></p>
        </div>
      </li>

      <li class="span4  steps">
        <div class="thumbnail">
          <h4>2</h4>
          <p><%= t("views.welcome.index.step2") %></p>
        </div>
      </li>

      <li  class="span4 steps">
        <div class="thumbnail">
          <h4>3</h4>
          <p><%= t("views.welcome.index.step3") %></p>
        </div>
      </li>

      <li class="offset1 span10">
      <%= image_tag asset_path("warning.png"), class: "warning-sign"%> <p class="text-error"><%= t("views.site_purpose") %></p>
      </li>

      <li  class="span12">
        <div class="">
            <% if current_user %>
             <p><%= link_to items_path, :class => "btn btn-large btn-success span4 offset4", :id => "gotopanel" do %>
                <%= t("views.welcome.index.search") %>
              <% end %></p>
            <% else %>
              <p><%= link_to t("views.welcome.index.access"), access_path, :id => "access", :class => "btn btn-large btn-primary span4 offset4" %></p>
              <p id="register-dropbox"><%= t("views.welcome.index.yet_no_dropbox") %>, <%= link_to t("views.welcome.index.here"),"http://db.tt/ZRmXzIc", target: "_blank" %></p>

<!DOCTYPE html>
<html>
<head>
  <title>Mil Cajas</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

  <% unless request.path == root_path %>
   <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Mil Cajas", root_path, class: "brand" %>
          <div class="nav-form pull-right current_user">
              <% if current_user %>
                <span class=""><%= t("views.layout.hi") %> <%= current_user.name %>!</span>
                <div class="btn-group settings">
                  <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="caret"></span></a>
                  <ul class="dropdown-menu pull-left" id="settings-dropdown">
                    <li><%= link_to signout_path do %>
                        <i class="icon-off"></i> <%= t("views.layout.exit") %>
                      <% end %></li>
                    <li class="divider"></li>
                    <li><%= link_to user_path(current_user), method: :delete, confirm: t("views.layout.sure_remove")  do %>
                        <i class="icon-trash"></i> <%= t("views.layout.remove_account") %>
                      <% end %></li>
                  </ul>
                </div>
             <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

      <div role="main" class="container">
        <% flash.each do |key, value| %>
          <div class="offset2 span6 alert  alert-<%= key == :notice ? "success" : key %>" data-dismiss="alert">
            <a class="close">×</a><%= value.strip %></div>
          <div class="clearfix"></div>
        <% end %>


      <%= yield %>
    </div>

  <div class="bottom-bar">
    <div class="bottombar-inner">
      <div class="container">
        <ul class="nav">
          <li><div class="copyright pull-left">© 2012 MilCajas</div></li>
          <li><div class="tos pull-left"><%= link_to "Terms of Service", tos_path %></div></li>
          <li>
          <div class="me pull-right"><%= t("views.layout.developed_by") %>&nbsp;&nbsp; <%= link_to image_tag("http://www.gravatar.com/avatar/0abb865917333b287e76cebd2debdca5.png", height: '40px', width: '40px', class: 'img-circle'), "https://github.com/blanchma/" %></div>
        </li>
        </ul>
      </div>
  </div>
  </div>
</body>
</html>
